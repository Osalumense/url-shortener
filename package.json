    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "mocha": "^10.2.0",
    "mysql2": "^3.6.3",
    "parse-database-url": "^0.3.0",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/chai": "^4.3.10",
