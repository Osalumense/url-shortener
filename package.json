    "@types/isomorphic-fetch": "^0.0.39",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/knex": "^0.16.1",
    "@types/mocha": "^10.0.4",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "yarn lint",
        "git add"
      ]
    },
    "ignore": [
      "dist/**/*"
