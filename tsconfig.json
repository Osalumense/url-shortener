{
  
  "compilerOptions": {
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,

    "target": "es6",

    "outDir": "./dist",
    "module": "commonjs",

    "moduleResolution": "node",
    "lib": ["ES2015", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": [
    "src", 
    "package.json", 
    "package-lock.json", 
    "knexfile.js"
  ],

  "exclude": [
    "node_modules", 
    "*/*/*.test.ts", 
    "*/*/test.ts", 
    ".build"
  ]
}